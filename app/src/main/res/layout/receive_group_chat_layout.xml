<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/receive_chat_layout_margin_bottom"
        android:background="@drawable/receive_chat_text_layout"
        android:padding="@dimen/receive_chat_layout_padding">

        <TextView
            android:id="@+id/sender_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_in_receive_message"
            android:textColor="@color/chatapp_primary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/receive_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sender_name"
            android:layout_marginBottom="@dimen/receive_chat_layout_margin_bottom"
            android:text="@string/receive_chat_layout_text"
            android:textSize="@dimen/receive_chat_layout_textsize"/>

        <ImageView
            android:id="@+id/group_image"
            android:layout_below="@id/sender_name"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:visibility="gone"/>
    </RelativeLayout>

</RelativeLayout>