<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@drawable/receive_chat_text_layout"
        android:padding="@dimen/receive_chat_layout_padding"
        android:layout_marginBottom="@dimen/receive_chat_layout_margin_bottom">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/receive_chat_layout_text"
            android:textSize="@dimen/receive_chat_layout_textsize"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:visibility="gone"/>
    </RelativeLayout>

</RelativeLayout>