    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_chat_layout_text"
        android:textSize="@dimen/send_chat_layout_text_size"
